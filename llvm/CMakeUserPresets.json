{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_COLOR_DIAGNOSTICS": "ON"
      }
    },
    {
      "name": "linux-base",
      "inherits": "base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-dev",
      "displayName": "Linux development",
      "inherits": "linux-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_STANDARD": "20",
        "LLVM_USE_LINKER": "lld",
        "LLVM_ENABLE_PROJECTS": "clang",
        "LLVM_ENABLE_RUNTIMES": "libcxx;libcxxabi;libunwind",
        "LLVM_TARGETS_TO_BUILD": "X86",
        "LLVM_USE_SPLIT_DWARF": "ON",
        "LLVM_ENABLE_ASSERTIONS": "ON",
        "LLVM_OPTIMIZED_TABLEGEN": "ON",
        "LLVM_INCLUDE_BENCHMARKS": "OFF",
        "LLVM_INCLUDE_TESTS": "OFF",
        "LLVM_PARALLEL_LINK_JOBS": "1",
        "LLVM_INCLUDE_EXAMPLES": "OFF",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": "windows-base",
      "inherits": "base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-dev",
      "displayName": "Windows development",
      "inherits": "windows-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_C_FLAGS_DEBUG": "-D_ITERATOR_DEBUG_LEVEL=0",
        "CMAKE_CXX_FLAGS_DEBUG": "-D_ITERATOR_DEBUG_LEVEL=0",
        "LLVM_ENABLE_PROJECTS": "clang;compiler-rt",
        "LLVM_TARGETS_TO_BUILD": "X86;AArch64",
        "LLVM_ENABLE_ASSERTIONS": "ON",
        "LLVM_OPTIMIZED_TABLEGEN": "ON",
        "LLVM_INCLUDE_BENCHMARKS": "OFF",
        "LLVM_INCLUDE_EXAMPLES": "OFF",
        "LLVM_INCLUDE_TESTS": "ON",
        "LLVM_PARALLEL_LINK_JOBS": "1"
      }
    }
  ]
}
